# ===========================================
# HUBSPOT API (server-side only)
# ===========================================
HUBSPOT_API_KEY=your-hubspot-api-key-here

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Public variables (exposed to browser via NEXT_PUBLIC_* prefix)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-only variables (NOT exposed to browser)
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ACCESS_TOKEN=your-personal-access-token-here
SUPABASE_PROJECT_REF=your-project-ref-here

# ===========================================
# DATABASE (PostgreSQL Direct Connection)
# ===========================================
DATABASE_URL="postgresql://postgres:your-password@your-host:6543/postgres?pgbouncer=true"
